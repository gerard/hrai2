# vim: set filetype=sh :

HELPERS="init add add-category list mark"
_hrai()
{
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"

    if [ "$prev" == "hrai" ] ; then
        opts=$HELPERS
    else
        return 1
    fi

    COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
    return 0
}
complete -F _hrai hrai
